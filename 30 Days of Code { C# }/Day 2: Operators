using System;

    class Program
    {
        static void Main(string[] args)
        {
            var meal_cost = Convert.ToDouble(Console.ReadLine());

            var tip_percent = Convert.ToInt32(Console.ReadLine());

            var tax_percent = Convert.ToInt32(Console.ReadLine());

            var tip = tip_percent * meal_cost / 100;
            var tax = tax_percent * meal_cost / 100;

            var total = meal_cost + tip + tax;
            var totalCost = Math.Round(total);

            Console.WriteLine(+ totalCost);
        }

    }
